---
import Base from "@/layouts/Base.astro";
import Title from "@/components/atoms/Title";
import type { Lang } from "@/define";
import { css } from "@/styled-system/css";
import { i18n } from "@/libs/i18n";
import { getText } from "@/libs/getI18n";

interface Props {
	lang?: Lang;
}

const { lang = "ja" } = Astro.props;

const { translateData } = await i18n(lang);
---

<Base
	title={getText(translateData, "terms_pageTitle")}
	description={`${getText(translateData, "terms_description")}${getText(translateData, "fixedDescription")}`}
	lang={lang}
>
	<div
		class={css`
			display: flex;
			flex-direction: column;
			gap: 30px;
		`}
	>
		<Title>{getText(translateData, "terms_pageTitle")}</Title>
		<div
			class={css`
				* {
					line-height: 1.5 !important;
				}

				h3 {
					font-weight: bold !important;
					font-size: 23px !important;
					margin-top: 30px !important;
					margin-bottom: 20px !important;

					* {
						font-weight: bold !important;
						font-size: 23px !important;
						margin-top: 30px !important;
						margin-bottom: 20px !important;
					}

					&:first-of-type {
						margin-top: 0 !important;
					}
				}

				p {
					margin-bottom: 15px !important;
				}

				ul {
					margin-bottom: 15px !important;
					list-style-type: square !important;
				}

				a {
					color: #2c91fd !important;
					* {
						color: #2c91fd !important;
					}
				}

				strong {
					font-weight: bold !important;
				}
			`}
			set:html={getText(translateData, "terms_content", true)}
		/>
	</div>
</Base>
