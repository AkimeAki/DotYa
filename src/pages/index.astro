---
import Base from "@/layouts/Base.astro";
import List from "@/components/templates/List";
import type { DotIllust } from "@/types";
import { getListAllContents } from "@/libs/microcms";

const dots = await getListAllContents<DotIllust>("dot", { fields: ["id", "title", "dot32", "dot16", "tags"] });
---

<Base><List title="ドット絵一覧" dots={dots} client:load /></Base>
