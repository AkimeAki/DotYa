---
import Base from "@/layouts/Base.astro";
import Page from "./_page";
import { getCachedContents } from "@/libs/microcms";
import type { DotIllust } from "@/types";

const dots = await getCachedContents<DotIllust>("dot");
---

<Base
	title="カスタマイズ"
	description="2つのドット絵をくっつけることができます！お好みのカスタマイズをしてみてね！「どっとや」はドット絵のフリーイラスト素材屋さんです。"
	ignoreSearch
>
	<Page dots={dots} client:load />
</Base>
