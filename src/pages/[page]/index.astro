---
import Base from "@/layouts/Base.astro";
import Page from "./_page";
import type { CMSPage } from "@/types";
import { getCachedContents } from "@/libs/microcms";
import type { MicroCMSContentId, MicroCMSDate } from "microcms-js-sdk";

interface pathType {
	params: {
		page: string;
	};
	props: {
		detail: CMSPage & MicroCMSContentId & MicroCMSDate;
	};
}

export const getStaticPaths = async (): Promise<pathType[]> => {
	const response = await getCachedContents<CMSPage>("page");

	return response.map((content) => ({
		params: {
			page: content.id
		},
		props: {
			detail: content
		}
	}));
};

const { page } = Astro.params;
if (page === undefined) {
	return;
}

const { detail } = Astro.props;
---

<Base
	title={detail.title}
	description={`${detail.title}ページです。「どっとや」はドット絵のフリーイラスト素材屋さんです。`}
>
	<Page title={detail.title} content={detail.content} />
</Base>
