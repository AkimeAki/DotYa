---
import Base from "@/layouts/Base.astro";
import Page from "./_page";
import type { DotIllust } from "@/types";
import { getListAllContents } from "@/libs/microcms";
import type { MicroCMSContentId, MicroCMSDate } from "microcms-js-sdk";

interface pathType {
	params: {
		id: string;
	};
	props: {
		dot: DotIllust & MicroCMSContentId & MicroCMSDate;
		sameTagDots: (DotIllust & MicroCMSContentId & MicroCMSDate)[];
	};
}

export const getStaticPaths = async (): Promise<pathType[]> => {
	const response = await getListAllContents<DotIllust>("dot", { fields: ["id", "title", "dot32", "dot16", "tags"] });
	return response.map((content) => ({
		params: {
			id: content.id
		},
		props: {
			dot: content,
			sameTagDots: response.filter((item) => {
				if (item.id === content.id) {
					return false;
				}

				for (const tag of item.tags) {
					for (const thisTag of content.tags) {
						if (tag.id === thisTag.id) {
							return true;
						}
					}
				}

				return false;
			})
		}
	}));
};

const { id } = Astro.params;
if (id === undefined) {
	return;
}

const { dot, sameTagDots } = Astro.props;

const illust = dot.dot32 ?? dot.dot16;
if (illust === undefined) {
	return;
}

const px = dot.dot32 !== undefined ? 16 : dot.dot16 !== undefined ? 32 : 16;
---

<Base
	title={dot.title}
	ogImage={`${illust.url}?w=512&q=100&px=${px}`}
	description={`${dot.title}のドット絵です。「どっとや」はドット絵のフリーイラスト素材屋さんです。`}
>
	<Page client:load dot={dot} sameTagDots={sameTagDots} />
</Base>
